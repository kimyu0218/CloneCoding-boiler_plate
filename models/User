const mongoose = require('mongoose');

const userSchema = mongoose.Schema({ /* 스키마 생성 */
    name: {
        type: String,
        maxlength: 50
    },
    email: {
        type: String,
        trim: true, /* space 없애줌 */
        unique: 1
    },
    password: {
        type: String,
        minlength: 5
    },
    lastname: {
        type: String,
        minlength: 5
    },
    role: { /* 관리자/일반 유저 구분 목적 */
        type: Number,
        default: 0
    },
    image: String,
    token: {
        type: String
    },
    tokenExp:{ /* 토큰 유효 기간 */
        type: Number
    }
})

const User = mongoose.model('User', userSchema) /* 모델명, 스키마 */
model.exports = { User } /* 다른 파일에서 사용하기 위함 */